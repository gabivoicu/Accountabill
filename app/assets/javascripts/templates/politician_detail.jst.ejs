<div class="row">
  <div class="row">
    <img src="<%= photo_url %>" class="large-4 columns" id="detail-img">
		<h2 class="large-8 columns"> <%= title %> <%= firstname %> <%= lastname %> (<%= party %>)</h2>
    <span id="hide-bio"><%=bioguide_id%></span>
  </div>
  <div class="row">
    <div class="large-centered columns">
  		<div class="row">
  			<p><%= bio %></p>
  		</div>
      <div class="row">
        <h4>Contact</h4>
        <% if (oc_email) {%>
        <a href="mailto:"<%= oc_email %>><%= oc_email %> </a>
        <%} %>
      </div>
    </div>
	</div>
</div>
<div class="row">
  <ul class="accordion" data-accordion>
    <li class="accordion-navigation">
      <a href="#panel1a">Top Contributions By Sector</a>
      <div id="panel1a" class="content active">
  			<div id="sector-chart"></div>
      </div>
    </li>
    <li class="accordion-navigation">
      <a href="#panel2a">Contributor Types</a>
      <div id="panel2a" class="content">
      	<div id="contributor-types"></div>
      </div>
    </li>
    <li class="accordion-navigation">
      <a href="#panel3a">Sponsored Legislation</a>
      <div id="panel3a" class="content">
        <div id="Bills-Here"></div>
      </div>
    </li>
    <li class="accordion-navigation">
      <a href="#panel4a">Top Contributions By Industry</a>
      <div id="panel4a" class="content">
        <div id="industry-chart"></div>
      </div>
    </li>
    <li class="accordion-navigation">
      <a href="#panel5a">Top Contributors</a>
      <div id="panel5a" class="content">
        <div id="top-contributor"></div>
      </div>
    </li>
  </ul>
</div>
